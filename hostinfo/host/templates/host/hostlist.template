{% extends "host/base.html" %}
{% block title %} List of hosts {{ title }} {% endblock %}
{% load local_escape %}

{% block content %}

<h2>{{ title }}</h2>

{{ count }} matches<br>
<a href="/hostinfo/hostcmp/{{title|local_escape}}">Host Comparison View</a>

{% if error %}
<h2 style="color:red"> {{error}} </h2> 
{% endif %}

<table class="table table-striped">
{% for host,kvlist,hostlink in hostlist %}
    <tr>
    <td><a class="hostname" href="{% url 'host' host %}">{{ host }}</a>
    {% if user.is_authenticated %}
        &nbsp;
        <a href="{% url 'hostEdit' host %}"><span class="glyphicon glyphicon-edit"></span></a>
    {% endif %}
    </td>
    <td align="left">
    {% if hostlink %}
        {% for link in hostlink %}
            {{link|safe}}
        {% endfor %}
    {%endif%}
    </td>
    </tr>
{% endfor %}
</table>
{% endblock %}
{# EOF #}
